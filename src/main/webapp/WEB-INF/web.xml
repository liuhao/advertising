<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>ShowAdTypes</servlet-name>
        <servlet-class>com.sparkmedia.van.advertising.action.ShowAdSiteTypes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAdType</servlet-name>
        <servlet-class>com.sparkmedia.van.advertising.action.AddAdSiteType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUpload</servlet-name>
        <servlet-class>com.sparkmedia.van.advertising.action.FileUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowAdTypes</servlet-name>
        <url-pattern>/show_ad_type</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAdType</servlet-name>
        <url-pattern>/add_adtype_rec</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUpload</servlet-name>
        <url-pattern>/file_upload</url-pattern>
    </servlet-mapping>
    <display-name>Sparkmedia Advertising Operating Server</display-name>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
